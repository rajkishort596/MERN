<% layout('/layouts/boilerplate') %>
<div class="row justify-content-center py-3">
  <div class="col-md-6">
    <h3 class="text-center">Sign Up to WanderLust</h3>
    <form method="POST" action="/signup" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input
          name="username"
          id="username"
          type="text"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Enter Username</div>
      </div>
      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input
          name="email"
          id="email"
          type="email"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Enter Email</div>
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input
          name="password"
          id="password"
          type="password"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Enter Password</div>
      </div>
      <button class="btn-md btn btn-success w-100" type="submit">SignUp</button>
    </form>
  </div>
</div>
